{% extends 'inside.html.twig' %}

{% block title %}New Demande{% endblock %}

{% block main %}
   <div class="card">
        <div class="card-header">
           <h3>Ajouter Demande</h3>
        </div>
        <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="mt-4 row d-flex flex-column align-items-center">
            <div class="mb-3">
                {{ form_row(form.titre) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.description) }}
            </div>
            <div class="row">
                <div class="mb-3 col">
                    {{ form_row(form.date_creation) }}
                </div>
                <div class="mb-3 col">
                    {{ form_row(form.Source) }}
                </div>
            </div>    
            <div class="row">
                <div class="mb-3 col">
                    {{ form_row(form.type) }}
                </div>
                <div class="mb-3 col">
                    {{ form_row(form.canal) }}
                </div>
                <div class="mb-3 col">
                    {{ form_row(form.statut) }}
                </div>
            <div>
            <div class="my-4 col-md-10 d-flex justify-content-between">
                <a href="{{ path('app_assistance_index') }}" class="btn btn-secondary w-50">Retour</a>
                <button type="submit" class="btn btn-primary w-50">Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
