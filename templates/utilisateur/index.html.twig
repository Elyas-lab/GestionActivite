{% extends 'inside.html.twig' %}

{% block title %}Utilisateur Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table th, .table td { text-align: center; vertical-align: middle; }
        .table thead tr { background-color: #007bff; color: white; }
        .dataTables_wrapper .dataTables_filter { float: right; margin-bottom: 10px; }
        .dataTables_wrapper .dataTables_length { float: left; }
    </style>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <h1 class="mb-4">Liste des Utilisateurs</h1>

        <div class="row mb-3">
            <div class="col-md-12">
                <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Créer un utilisateur
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <table id="utilisateurTable" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Matricule</th>
                            <th>Groupes</th>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import $ from 'jquery';
        if (typeof window.jQuery === 'undefined') {
            window.$ = window.jQuery = $;
        }

        $(document).ready(function() {
            console.log('Document prêt');
            
            try {
                $('#utilisateurTable').DataTable({
                    "processing": true,
                    "serverSide": true,
                    "ajax": {
                        "url": "{{ path('app_utilisateur_list') }}",
                        "type": "GET",
                        "dataSrc": function (json) {
                            return json.data;  // Ensure this matches your server response structure
                        }
                    },  // <-- Added a comma here
                    "columns": [
                        { "data": "id" },
                        { "data": "matricule" },
                        { 
                            "data": "groupes",
                            "render": function(data, type, row) {
                                if (data.length === 0) {
                                    return "<span>Aucun groupe</span>";
                                }
                                return "<ul>" + data.map(g => `<li>${g}</li>`).join('') + "</ul>";
                            }
                        },
                        { "data": "nom" },
                        {
                            "data": null,
                            "render": function(data, type, row) {
                                return `
                                    <a href="${row.detailUrl}" class="btn btn-info btn-sm">Détails</a>
                                    <a href="${row.editUrl}" class="btn btn-warning btn-sm">Modifier</a>
                                `;
                            }
                        }
                    ],
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
                    }
                });
            } catch (error) {
                console.error('Erreur lors de l\'initialisation de DataTables:', error);
            }
        });
    </script>
{% endblock %}
