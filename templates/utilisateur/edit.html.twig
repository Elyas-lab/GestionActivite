{% extends 'inside.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block main %}
    <h1>Modifier Utilisateur</h1>

    <form method="post">
        <div class="mb-3">
            <label for="matricule" class="form-label">Matricule</label>
            <input type="text" id="matricule" name="matricule" value="{{ utilisateur.matricule }}" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="nom" class="form-label">Nom</label>
            <input type="text" id="nom" name="nom" value="{{ utilisateur.nom }}" class="form-control" required>
        </div>


        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}" class="btn btn-secondary ">Back to details</a>
    </form>

{% endblock %}
