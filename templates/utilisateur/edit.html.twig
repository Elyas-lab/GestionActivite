{% extends 'inside.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block main %}
    <h1>Modifier Utilisateur</h1>

      {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.matricule, 'Matricule') }}
                {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.password, 'Password') }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">Back to List</a>
        {{ form_end(form) }}
         {{ form_end(form) }}

{% endblock %}
