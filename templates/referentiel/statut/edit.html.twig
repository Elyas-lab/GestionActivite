{% extends 'inside.html.twig' %}

{% block title %}Modifier un Statut{% endblock %}

{% block main %}
<div class="card">
    <div class="card-header">
        Modifier un Statut
    </div>
    <div class="card-body">
        {{ form_start(form) }}

        <div class="mt-4 row d-flex flex-column align-items-center">
            <div class="col-md-10">
                <!-- Nom -->
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du statut'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <!-- Description -->
                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du statut', 'rows': '5'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <!-- Actif -->
                <div class="mb-3 form-check">
                    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.isActive, 'Actif', {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(form.isActive) }}
                </div>
            </div>

            <!-- Buttons -->
            <div class="my-4 col-md-10 d-flex justify-content-between">
                <a href="{{ path('app_statut_index') }}" class="btn btn-secondary w-50 ">Retour</a>
                <button type="submit" class="btn btn-success ">Enregistrer</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
