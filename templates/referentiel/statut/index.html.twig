{% extends 'inside.html.twig' %}

{% block title %}Statuts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }
        .table-description {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .status-badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-weight: 600;
        }
        .status-active {
            background-color: #28a745;
            color: white;
        }
        .status-inactive {
            background-color: #6c757d;
            color: white;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import $ from 'jquery';
        
        $(document).ready(function() {
            $('#statutTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
                },
                columnDefs: [
                    { orderable: false, targets: [-1] },
                    { width: '10%', targets: [0, 3] }
                ],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Tout"]]
            });
        });
    </script>
{% endblock %}

{% block main %}
<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Gestion des Statuts</h2>
            <a href="{{ path('app_statut_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un Nouveau Statut
            </a>
        </div>
        <div class="card-body">
            <table id="statutTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for statut in statuts %}
                    <tr>
                        <td>{{ statut.id }}</td>
                        <td>{{ statut.nom }}</td>
                        <td class="table-description" title="{{ statut.description }}">
                            {{ statut.description|slice(0, 100) }}{% if statut.description|length > 100 %}...{% endif %}
                        </td>
                        <td>
                            <span class="status-badge {{ statut.isActive ? 'status-active' : 'status-inactive' }}">
                                {{ statut.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                        </td>
                        <td>
                            <div class="table-actions">
                                <a href="{{ path('app_statut_show', {'id': statut.id}) }}" class="btn btn-sm btn-info" title="Détails">
                                    <i class="fas fa-eye">Details</i>
                                </a>
                                <a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit">Modifier</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun statut trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}