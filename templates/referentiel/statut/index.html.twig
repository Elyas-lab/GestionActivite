{% extends 'inside.html.twig' %}


{% block title %}Statut index{% endblock %}

{% block main %}
    <h1>Statut index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.id }}</td>
                <td>{{ statut.nom }}</td>
                <td>{{ statut.description }}</td>
                <td>{{ statut.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_statut_show', {'id': statut.id}) }}">show</a>
                    <a href="{{ path('app_statut_edit', {'id': statut.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_statut_new') }}">Create new</a>
{% endblock %}
