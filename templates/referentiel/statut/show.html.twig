{% extends 'inside.html.twig' %}

{% block title %}Détails Statut{% endblock %}

{% block main %}
<div class="container-fluid mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="me-1 fas fa-info-circle me-2"></i>Détails Statut
            </h2>
            <span class="badge bg-light text-primary">ID: {{ statut.id }}</span>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <i class="me-1 fas fa-bars me-2"></i>Informations du Statut
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Numéro</span>
                                <span>{{ statut.id }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Nom</span>
                                <span>{{ statut.nom }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Description</span>
                                <span>{{ statut.description }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Statut</span>
                                <span class="badge {{ statut.isActive ? 'bg-success' : 'bg-danger' }}">
                                    {{ statut.isActive ? 'Actif' : 'Inactif' }}
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="btn btn-warning">
                    <i class="me-1 fas fa-edit me-2"></i>Modifier
                </a>
                <a href="{{ path('app_statut_index') }}" class="btn btn-secondary">
                    <i class="me-1 fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}