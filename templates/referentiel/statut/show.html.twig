{% extends 'inside.html.twig' %}

{% block title %}Détails Statut{% endblock %}

{% block main %}
    <h1>Statut Details</h1>

    <table class="table">
        <tr>
            <th>Numéro</th>
            <td>{{ statut.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ statut.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ statut.description }}</td>
        </tr>
        <tr>
            <th>Is Active</th>
            <td>{{ statut.isActive ? 'Yes' : 'No' }}</td>
        </tr>
    </table>

    <a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="btn btn-warning">Modifier</a>
    <a href="{{ path('app_statut_index') }}" class="btn btn-secondary">Back</a>
{% endblock %}
