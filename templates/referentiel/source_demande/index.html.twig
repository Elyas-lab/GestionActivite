{% extends 'inside.html.twig' %}

{% block title %}Sources de Demande{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import $ from 'jquery';
        
        $(document).ready(function() {
            $('#sourceDemandeTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
                },
                columnDefs: [
                    { orderable: false, targets: [-1] },
                    { width: '10%', targets: [0] }
                ],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Tout"]]
            });
        });
    </script>
{% endblock %}

{% block main %}
<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Gestion des Sources de Demande</h2>
            <a href="{{ path('app_source_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer une Nouvelle Source
            </a>
        </div>
        <div class="card-body">
            <table id="sourceDemandeTable" class="table table-striped table-bordered table-hover m-2">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Nom de la Source</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for source_demande in source_demandes %}
                    <tr>
                        <td>{{ source_demande.id }}</td>
                        <td>{{ source_demande.nom }}</td>
                        <td>
                            <div class="table-actions">
                                <a href="{{ path('app_source_show', {'id': source_demande.id}) }}" class="btn btn-sm btn-info" title="Détails">
                                    <i class="fas fa-eye">Details</i>
                                </a>
                                <a href="{{ path('app_source_edit', {'id': source_demande.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit">Modifier</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucune source de demande trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}