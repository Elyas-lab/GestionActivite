{% extends 'inside.html.twig' %}

{% block title %}Détails SourceDemande{% endblock %}

{% block main %}
<div class="container-fluid mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Détails SourceDemande
            </h2>
            <span class="badge bg-light text-primary">ID: {{ source_demande.id }}</span>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <i class="fas fa-bars me-2"></i>Informations de la Source
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Numéro</span>
                                <span>{{ source_demande.id }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Nom</span>
                                <span>{{ source_demande.nom }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Description</span>
                                <span>{{ source_demande.description }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_source_edit', {'id': source_demande.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Modifier
                </a>
                <a href="{{ path('app_source_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}