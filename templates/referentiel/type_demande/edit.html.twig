{% extends 'inside.html.twig' %}

{% block title %}Modifier TypeDemande{% endblock %}

{% block main %}
    <h1>Modifier TypeDemande</h1>

    <form method="post">
        <div class="mb-3">
            <label for="nom" class="form-label">Nom</label>
            <input type="text" id="nom" name="nom" value="{{ type_demande.nom }}" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" id="description" name="description" value="{{ type_demande.description }}" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Save changes</button>
    </form>

    <a href="{{ path('app_type_show', {'id': type_demande.id}) }}" class="btn btn-secondary mt-2">Back to details</a>
{% endblock %}
