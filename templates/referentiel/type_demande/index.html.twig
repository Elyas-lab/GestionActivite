{% extends 'inside.html.twig' %}

{% block title %}TypeDemande Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function() {
            $('#typeDemandeTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}

{% block main %}
    <h1 class="mb-4">TypeDemande Index</h1>

    <div class="mb-3">
        <a href="{{ path('app_type_new') }}" class="btn btn-primary">Create New</a>
    </div>

    <table id="typeDemandeTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_demande in type_demandes %}
            <tr>
                <td>{{ type_demande.id }}</td>
                <td>{{ type_demande.nom }}</td>
                <td>{{ type_demande.description }}</td>
                <td>
                    <a href="{{ path('app_type_show', {'id': type_demande.id}) }}" class="btn btn-sm btn-info">Détails</a>
                    <a href="{{ path('app_type_edit', {'id': type_demande.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
