<script>
document.addEventListener('DOMContentLoaded', () => {
    // Gestion de l'ouverture et fermeture des items de l'accordéon
    const accordionButtons = document.querySelectorAll('.accordion-button');
    const accordionCollapseElements = document.querySelectorAll('.accordion-collapse');
    const accordionReferentiel = document.getElementById('accordionReferentiel');

    accordionButtons.forEach(button => {
        button.addEventListener('click', () => {
            const collapseTarget = document.querySelector(button.getAttribute('data-bs-target'));
            const isExpanded = collapseTarget.classList.contains('show');

            // Fermer tous les autres items
            accordionCollapseElements.forEach(element => {
                element.classList.remove('show');
            });

            // Si l'élément cliqué était déjà ouvert, ne pas le rouvrir
            if (!isExpanded) {
                collapseTarget.classList.add('show');
            }
        });
    });

    // Log lorsque les items de l'accordéon sont ouverts ou fermés
    if (accordionReferentiel) {
        accordionReferentiel.addEventListener('shown.bs.collapse', () => {
            console.log('Accordion item expanded.');
        });

        accordionReferentiel.addEventListener('hidden.bs.collapse', () => {
            console.log('Accordion item collapsed.');
        });
    }
});

</script>
